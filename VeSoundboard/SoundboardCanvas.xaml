<UserControl x:Class="VeSoundboard.SoundboardCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VeSoundboard"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas x:Name="BaseCanvas" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" AllowDrop="True" DragEnter="BaseCanvas_DragEnter" DragLeave="BaseCanvas_DragLeave" Drop="BaseCanvas_Drop"/>
</UserControl>
